{
  "name": "my-razzle-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start:dev": "concurrently \"yarn server\" \"yarn start\"",
    "start": "razzle start",
    "build": "razzle build",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "start:prod": "NODE_ENV=production node build/server.js",
    "server": "json-server --watch --port 3002 data.json",
    "lint": "eslint src -c .eslintrc.json --ext js,jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,scss}\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "antd": "^3.26.8",
    "axios": "^0.19.2",
    "embla-carousel-react": "^1.2.17",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "query-string": "^6.11.0",
    "razzle": "^3.0.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-intl": "^4.1.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.0.1",
    "vanilla-lazyload": "^12.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.1.0",
    "json-server": "^0.16.1",
    "react-test-renderer": "^16.13.0",
    "redux-mock-store": "^1.5.4",
    "serialize-javascript": "^3.1.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup/setupEnzyme.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/setup/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "comments": {
    "test": "replace script test: razzle test --env=jsdom"
  },
  "pre-commit": [
    "lint",
    "format"
  ]
}
